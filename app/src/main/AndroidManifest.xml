<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.buzzware.iride">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.Iride">
        <activity
            android:name=".screens.CustomerRequestsActivity"
            android:exported="true" />
        <activity
            android:name=".screens.CreateNewRequestActivity"
            android:exported="true" />
        <activity
            android:name=".screens.MessagesActivity"
            android:exported="true" />
        <activity
            android:name=".screens.EditProfileActivity"
            android:exported="true" />
        <activity android:name=".screens.Settings" />
        <activity
            android:name=".screens.Notifications"
            android:theme="@style/Theme.white" />
        <activity
            android:name=".screens.ConfirmPickupActivity"
            android:theme="@style/Theme.white" />
        <activity
            android:name=".screens.BookingsActivity"
            android:theme="@style/Theme.white" />
        <activity
            android:name=".screens.Chat"
            android:theme="@style/Theme.white" />
        <activity
            android:name=".screens.History"
            android:theme="@style/Theme.white" />
        <activity
            android:name=".screens.HomeActivity"
            android:theme="@style/Theme.white" />
        <activity
            android:name=".screens.Invitation"
            android:theme="@style/Theme.white" />
        <activity
            android:name=".screens.Messages"
            android:theme="@style/Theme.white" />
        <activity
            android:name=".screens.ScheduledRides"
            android:theme="@style/Theme.white" />
        <activity
            android:name=".screens.Profile"
            android:theme="@style/Theme.white" />
        <activity
            android:name=".screens.Wallet"
            android:theme="@style/Theme.white" />
        <activity
            android:name=".screens.TripView"
            android:theme="@style/Theme.white" />
        <activity
            android:name=".screens.BookARideActivity"
            android:theme="@style/Theme.white" />
        <activity
            android:name=".screens.OnTrip"
            android:theme="@style/Theme.white" />
        <activity
            android:name=".screens.Authentication"
            android:theme="@style/Theme.white" />
        <activity android:name=".screens.StartUp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".push.MyFirebaseMessagingService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".screens.NotificationDetail"
            android:exported="true" />

        <activity
            android:name=".screens.AboutUs"
            android:exported="true" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>