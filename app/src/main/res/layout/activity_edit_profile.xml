<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_white">

        <ImageView
            android:id="@+id/userImageIV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/dummy_two"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/editImageIV"
            app:layout_constraintBottom_toBottomOf="@id/userImageIV"
            app:layout_constraintEnd_toEndOf="@id/userImageIV"
            android:layout_marginBottom="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:padding="@dimen/_2sdp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_add_circle_outline_24" />



        <ScrollView
            android:scrollbars="vertical"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_180sdp"
            android:background="@drawable/rounded_corner_gray_two_top"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/lksl"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <RelativeLayout
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/rounded_corner_white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp">

                        <EditText
                            android:id="@+id/fNameET"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:backgroundTint="@android:color/transparent"
                            android:fontFamily="@font/gibson_regular"
                            android:hint="First Name"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/rounded_corner_white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp">

                        <EditText
                            android:id="@+id/lNameET"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:backgroundTint="@android:color/transparent"
                            android:fontFamily="@font/gibson_regular"
                            android:hint="Last Name"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/rounded_corner_white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp">

                        <TextView
                            android:id="@+id/emailTV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:backgroundTint="@android:color/transparent"
                            android:fontFamily="@font/gibson_regular"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="Email"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/rounded_corner_white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp">

                        <EditText
                            android:id="@+id/phoneET"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:backgroundTint="@android:color/transparent"
                            android:fontFamily="@font/gibson_regular"
                            android:hint="Phone Number"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="11"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/rounded_corner_white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp">

                        <EditText
                            android:id="@+id/cityET"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:backgroundTint="@android:color/transparent"
                            android:fontFamily="@font/gibson_regular"
                            android:hint="City"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="11"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/rounded_corner_white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp">

                        <EditText
                            android:id="@+id/stateET"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:backgroundTint="@android:color/transparent"
                            android:fontFamily="@font/gibson_regular"
                            android:hint="State"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="11"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/rounded_corner_white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp">

                        <EditText
                            android:id="@+id/zipET"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:backgroundTint="@android:color/transparent"
                            android:fontFamily="@font/gibson_regular"
                            android:hint="Zip Code"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="11"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/rounded_corner_white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp">

                        <EditText
                            android:id="@+id/homeAddressET"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:backgroundTint="@android:color/transparent"
                            android:fontFamily="@font/gibson_regular"
                            android:hint="Home Address"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="11"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/rounded_corner_white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp">

                        <EditText
                            android:id="@+id/workAddressET"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:backgroundTint="@android:color/transparent"
                            android:fontFamily="@font/gibson_regular"
                            android:hint="Work Address"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="11"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_below="@+id/lksl"
                    android:elevation="10dp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:id="@+id/updateBtn"
                    android:background="@drawable/rounded_corner_button_yellow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp">
                    <TextView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textStyle="normal"
                        android:textAllCaps="true"
                        android:fontFamily="@font/gibson_regular"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/white"
                        android:text="UPDATE"/>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>