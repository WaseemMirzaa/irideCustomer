<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/mesageLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/textMessageLay"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:elevation="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_button_blue_left"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_12sdp"
            android:paddingBottom="@dimen/_12sdp">
            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy."
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/messageTime"
        android:textSize="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_below="@+id/mesageLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9:10 am"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
</layout>