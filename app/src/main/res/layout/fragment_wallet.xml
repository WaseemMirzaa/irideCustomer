<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.Wallet">

        <RelativeLayout
            android:background="@color/purple_200"
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:src="@drawable/dummy_two"
            android:adjustViewBounds="true">
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_25sdp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="$150"
                    android:fontFamily="@font/gibson_semibd"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Balance"
                    android:fontFamily="@font/gibson_semibd"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="-20dp"
            android:background="@drawable/rounded_corner_white_two_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/image">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:elevation="@dimen/_8sdp"
                android:background="@drawable/rounded_corner_white"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp">
                <include
                    layout="@layout/saved_card_item"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_light"
                    android:layout_alignParentBottom="true"/>

                <include
                    layout="@layout/saved_card_item"/>

                <TextView
                    android:id="@+id/btnAddPayment"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Payment Methord"
                    android:textStyle="bold"
                    android:textColor="@color/purple_200"
                    android:textSize="@dimen/_11sdp"
                    android:singleLine="true"
                    android:fontFamily="@font/gibson_regular"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/_25sdp"
            android:id="@+id/drawerIcon"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/drawer_white"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </RelativeLayout>
</layout>