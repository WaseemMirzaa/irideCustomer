<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.Wallet">

        <View
            android:background="@color/purple_200"
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/dummy_two"
            android:adjustViewBounds="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll"
            android:padding="@dimen/_10sdp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/rounded_corner_white_two_top"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menuAppBar">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Payments"
                    android:textStyle="bold"
                    android:textColor="@color/purple_200"
                    android:textSize="@dimen/_11sdp"
                    android:singleLine="true"
                    android:fontFamily="@font/gibson_regular"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_light"
                android:layout_alignParentBottom="true"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/myCardsRV"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_light"
                android:layout_alignParentBottom="true"/>

            <RelativeLayout
                android:id="@+id/btnAddPayment"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Payment Method"
                    android:textStyle="bold"
                    android:textColor="@color/purple_200"
                    android:textSize="@dimen/_11sdp"
                    android:singleLine="true"
                    android:fontFamily="@font/gibson_regular"/>
            </RelativeLayout>
        </LinearLayout>

        <include layout="@layout/back_app_bar"
            android:id="@+id/menuAppBar"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>