<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.HomeActivity">

        <com.google.android.gms.maps.MapView
            android:id="@+id/homeMapView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnTripView"/>

        <RelativeLayout
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rounded_corner_button_white"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/btnDrawer"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/menu_black"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"/>

                <RelativeLayout
                    android:id="@+id/btnWhereGo"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Where to?"
                        android:textSize="@dimen/_11sdp"
                        android:id="@+id/whereToTV"
                        android:textStyle="bold"
                        android:fontFamily="@font/gibson_regular" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/btnTripView"
            app:layout_constraintEnd_toEndOf="parent">

            <RelativeLayout
                android:id="@+id/btnSettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_corner_white">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/settings" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/currentLocationIV"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/rounded_corner_white">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="29dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/current_location" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnTripView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/rounded_corner_button_light_blue_top_two"/>


            <LinearLayout
                android:visibility="gone"
                android:orientation="vertical"
                android:id="@+id/reachingLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/minsTV"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/_10sdp"
                    android:fontFamily="@font/gibson_semibd"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:text="30 min away"

                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_margin="@dimen/_15sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_height="@dimen/_50sdp"
                        android:id="@+id/userPic"
                        android:src="@color/black"
                        app:riv_corner_radius="@dimen/_10sdp"/>


                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/carPic"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_margin="@dimen/_15sdp"
                        android:src="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/userPic"
                        app:riv_corner_radius="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/nameTV"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="0dp"
                        android:maxLines="1"
                        android:ellipsize="end"

                        android:autoSizeMaxTextSize="@dimen/_15sdp"
                        android:autoSizeMinTextSize="@dimen/_8sdp"
                        android:autoSizeTextType="uniform"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:fontFamily="@font/gibson_semibd"
                        android:text="30 min away"

                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toStartOf="@+id/callIV"
                        app:layout_constraintStart_toEndOf="@+id/userPic"
                        app:layout_constraintTop_toTopOf="@+id/userPic" />

                    <TextView
                        android:id="@+id/numberTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:autoSizeMaxTextSize="@dimen/_15sdp"
                        android:autoSizeMinTextSize="@dimen/_8sdp"
                        android:autoSizeTextType="uniform"
                        android:background="@drawable/curved_blue_stroked"
                        android:ellipsize="end"
                        android:fontFamily="@font/gibson_regular"
                        android:gravity="center"
                        android:maxLines="1"
                        android:padding="@dimen/_5sdp"
                        android:text="30 min away"
                        android:textColor="@color/purple_700"
                        android:textSize="@dimen/_10sdp"
                        app:layout_constraintBottom_toBottomOf="@+id/colorTV"
                        app:layout_constraintEnd_toEndOf="@+id/msgIV"
                        app:layout_constraintStart_toStartOf="@+id/callIV"
                        app:layout_constraintTop_toTopOf="@+id/carTitleTV" />


                    <TextView
                        android:id="@+id/carTitleTV"
                        android:layout_width="0dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:autoSizeMaxTextSize="@dimen/_15sdp"
                        android:autoSizeMinTextSize="@dimen/_8sdp"
                        android:autoSizeTextType="uniform"
                        android:ellipsize="end"
                        android:fontFamily="@font/gibson_semibd"
                        android:maxLines="1"
                        android:text="30 min away"

                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toStartOf="@+id/callIV"
                        app:layout_constraintStart_toEndOf="@+id/userPic"
                        app:layout_constraintTop_toTopOf="@+id/carPic" />

                    <TextView
                        android:id="@+id/ratingTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:autoSizeMaxTextSize="@dimen/_15sdp"
                        android:autoSizeMinTextSize="@dimen/_8sdp"
                        android:autoSizeTextType="uniform"
                        android:ellipsize="end"
                        android:fontFamily="@font/gibson_regular"
                        android:maxLines="1"
                        android:text="30 min away"

                        android:textColor="@color/gray"
                        android:textSize="@dimen/_9sdp"
                        app:layout_constraintBottom_toBottomOf="@+id/userPic"
                        app:layout_constraintEnd_toStartOf="@+id/callIV"
                        app:layout_constraintStart_toEndOf="@+id/userPic"
                        app:layout_constraintTop_toBottomOf="@+id/nameTV" />

                    <TextView
                        android:id="@+id/colorTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:autoSizeMaxTextSize="@dimen/_15sdp"
                        android:autoSizeMinTextSize="@dimen/_8sdp"
                        android:autoSizeTextType="uniform"
                        android:ellipsize="end"
                        android:fontFamily="@font/gibson_regular"
                        android:maxLines="1"
                        android:text="30 min away"

                        android:textColor="@color/gray"
                        android:textSize="@dimen/_9sdp"
                        app:layout_constraintBottom_toBottomOf="@+id/carPic"
                        app:layout_constraintEnd_toStartOf="@+id/callIV"
                        app:layout_constraintStart_toEndOf="@+id/userPic"
                        app:layout_constraintTop_toBottomOf="@+id/carTitleTV" />

                    <ImageView
                        android:id="@+id/msgIV"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/message"
                        app:layout_constraintBottom_toBottomOf="@+id/userPic"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/userPic" />

                    <ImageView
                        android:id="@+id/callIV"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/call"
                        app:layout_constraintBottom_toBottomOf="@+id/msgIV"
                        app:layout_constraintEnd_toStartOf="@+id/msgIV"
                        app:layout_constraintTop_toTopOf="@+id/msgIV" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/rideBt"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:layout_above="@+id/btnTripView"
                    android:layout_alignParentRight="true"
                    app:cardBackgroundColor="@color/yellow"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:layout_constraintBottom_toTopOf="@+id/btnTripView"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/actionTV"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/gibson_semibd"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:text="Cancel"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>




            <LinearLayout

                android:id="@+id/onTripLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/blue_arrow_up" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:fontFamily="@font/gibson_semibd"
                                    android:text="On Trip"
                                    android:id="@+id/searchingForDrivers"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/timeTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="start"
                                    android:fontFamily="@font/gibson_semibd"
                                    android:text="    "
                                    android:textColor="@color/purple_200"
                                    android:textSize="@dimen/_8sdp"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/kmTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/gibson_regular"
                                android:text="Play music, read news..."
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_8sdp"
                                android:textStyle="normal" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>