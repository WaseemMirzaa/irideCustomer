<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_30sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:background="@drawable/rounded_corner_button_dark_blue"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_15sdp">
        <TextView
            android:id="@+id/messageTV"
            android:layout_marginRight="@dimen/_20sdp"
            android:textSize="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:lineSpacingExtra="5dp"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:fontFamily="@font/gibson_regular"/>
        <TextView
            android:id="@+id/timeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:fontFamily="@font/gibson_regular"
            android:lineSpacingExtra="5dp"
            android:text="9:00"
            android:layout_below="@id/messageTV"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentRight="true"
        android:background="@drawable/rounded_corner_white"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:padding="3dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/userImageIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/dummy_girl" />
    </RelativeLayout>
</RelativeLayout>
</layout>